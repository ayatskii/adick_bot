# Telegram Audio Bot Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Required API Keys
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud / Vertex AI Configuration (Required)
GCP_PROJECT_ID=your-gcp-project-id-here
GCP_LOCATION=us-central1
# GCP_CREDENTIALS_PATH=/path/to/service-account-key.json  # Optional, uses Application Default Credentials if not set
VERTEX_MODEL=gemini-2.0-flash-exp

# Optional Configuration (defaults shown)
LOG_LEVEL=INFO
MAX_FILE_SIZE=26214400
UPLOAD_DIR=uploads
ELEVEN_LABS_MODEL=scribe_v1
POLLING_INTERVAL=1.0
