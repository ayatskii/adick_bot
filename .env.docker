# Docker Environment Configuration Template
# Copy this file to .env and fill in your actual values
# This file is used by docker-compose.yml to configure the container

# =========================================
# Required API Keys
# =========================================

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ElevenLabs API Key for voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API Key for grammar checking
OPENAI_API_KEY=your_openai_api_key_here

# =========================================
# OpenAI Configuration
# =========================================

# OpenAI Model to use
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini

# =========================================
# Optional Configuration
# =========================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file size for uploads (in bytes, default: 25MB)
MAX_FILE_SIZE=26214400

# ElevenLabs transcription model
ELEVEN_LABS_MODEL=scribe_v1

# Bot polling interval in seconds
POLLING_INTERVAL=1.0
