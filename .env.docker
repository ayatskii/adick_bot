# Docker Environment Configuration Template
# Copy this file to .env and fill in your actual values
# This file is used by docker-compose.yml to configure the container

# =========================================
# Required API Keys
# =========================================

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ElevenLabs API Key for voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =========================================
# Google Cloud / Vertex AI Configuration
# =========================================

# Google Cloud Project ID where Vertex AI is enabled
GCP_PROJECT_ID=your-gcp-project-id

# Google Cloud Region (default: us-central1)
GCP_LOCATION=us-central1

# Path to service account JSON file (relative to project root)
# Default: ./service-account-key.json
GCP_CREDENTIALS_PATH=./service-account-key.json

# Vertex AI Model to use
# Options: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
VERTEX_MODEL=gemini-2.0-flash-exp

# =========================================
# Optional Configuration
# =========================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file size for uploads (in bytes, default: 25MB)
MAX_FILE_SIZE=26214400

# ElevenLabs transcription model
ELEVEN_LABS_MODEL=scribe_v1

# Bot polling interval in seconds
POLLING_INTERVAL=1.0
